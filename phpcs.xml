<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="100"/>
    <arg value="np"/>

    <file>src</file>
    <file>tests</file>

    <rule ref="PSR12"/>
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests/</exclude-pattern>
    </rule>
</ruleset>
