{
    "name": "hexlet/code",
    "type": "project",
    "authors": [
        {
            "name": "Nikita Krochak",
            "email": "krochak_n@mail.ru"
        }
    ],
    "description": "Validator",
    "license": "MIT",
    "scripts": {
        "test": "phpunit tests"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Hexlet\\Validator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hexlet\\Validator\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "psy/psysh": "@stable",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^0.12.22",
        "phpstan/phpstan": "^0.12.98"
    },
    "require": {
        "php": "^8.0",
        "tightenco/collect": "^8.34"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "beta"
}
